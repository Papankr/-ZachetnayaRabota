<html lang="ru">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
  <title>Signin Template for Bootstrap</title>
  </head>
  <body>
    <div class="container">
      <h2 class="form-signin-heading"><%=t(:'Регистрация')%></h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

            <div class="field">
              <%= f.label :email,:class=>'sr-only' %><br />
              <%= f.email_field :email, autofocus: true,:class=>"form-control",:placeholder=>"Email" %>
            </div>

            <div class="field">
              <%= f.label t(:'Пароль'),:class=>'sr-only' %><br />
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> Минимальное количество символов)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off",
                                   :class=>"form-control",:placeholder=>t(:'Пароль') %> <br/>
            </div>

            <div class="field">
              <%= f.label t(':Повторите_пароль') %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off",
                                   :class=>"form-control",:placeholder=>t(:'Повторите пароль') %><br/>
            </div>

            <div class="actions">
              <%= f.submit t(:'Войти'), :class=>"btn btn-lg btn-primary" %>
            </div>
        <% end %>

    <%= render "devise/shared/links" %>
    <%=link_to t(:'Назад'),root_path %>
    </div>
  </body>
</html>
