<html lang="ru">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Album example for Bootstrap</title>

    <style>
      .thumb img {
        -webkit-filter: grayscale(0);
        filter: none;
        border-radius: 5px;
        background-color: #fff;
        border: 1px solid #ddd;
        padding: 5px;
      }

      .thumb img:hover {
        -webkit-filter: grayscale(1);
        filter: grayscale(1);
      }

      .thumb {
        padding: 5px;
      }
    </style>

  </head>

  <body>

    <header>
      <div class="collapse bg-dark" id="navbarHeader">
        <div class="container">
          <div class="row">
            <div class="col-sm-8 py-4">
              <h4 class="text-white"><%= t(:'О проекте')%></h4>
              <p class="text-muted"></p>
            </div>

          <div class="col-sm-4 py-4">
            <h4 class="text-white"><%= t(:'Контакты') %></h4>
            <ul class="list-unstyled">
            <li><a href="https://vk.com/gaipov98" class="text-white"><%= t(:'Мы ВКонтакте') %></a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="navbar navbar-dark bg-dark">
      <div class="container d-flex justify-content-between">
        <%=link_to  t(:'Домой'), root_path, :class=> 'navbar-brand'%>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarHeader"
              aria-controls="navbarHeader" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>
    </div>

  </header>

  <main role="main">

    <section class="jumbotron text-center">
      <div class="container">
       <%= (t(:'Фотографии'))%>
        <p class="lead text-muted"></p>
        <p>
          <%=link_to t(:'Загрузить фото') ,newimage_path,:class=> 'btn btn-primary'%>
        </p>
      </div>
    </section>



    <div class="album text-muted">
      <div class="container">
        <div class="row">
          <% unless @images.nil? %>
              <% @images.each do |image|%>
                  <div class="col-lg-3 col-md-4 col-6 thumb">
                   <p class="card-text"><%=image.title %> </p>
                    <a data-fancybox="gallery" href=<%=image.image.url %> >
                      <img  data-src="holder.js/100px280?theme=thumb"
                            alt="Thumbnail [100%x280]" style="height: 280px; width: 100%; display: block;" src=<%=image.image%> ></a>
                    <% if user_signed_in? %>
                      <%if image.autor == current_user.email %>
                        <td><%= link_to t(:'Удалить'), { :action => :destroy, :id => image.id },
                                  :method => :delete, :confirm => 'Are you sure?' %></td>
                      <% end %>
                    <% end %>
                  </div>
              <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </main>

<!-- fancyBox -->
    <!--<script src="/jquery.fancybox.min.js"></script>-->
    </body>
  </html>
